.form {
  display: flex;
  @include desktop {
    flex-direction: column;
  }
  @include phones {
    justify-content: center;
    align-items: center;
  }
}

.form__row {
  margin-right: 15px;
  @include desktop {
    margin-bottom: 15px;
  }
  @include phones {
    margin-right: 0;
  }
}

.form__input {
  padding: 27px 0 28px 20px;
  font-size: 19px;
  width: 270px;
  border: none;
  @include desktop {
    font-size: 16px;
    width: 230px;
  }
}
