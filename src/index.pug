include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title 
  body
    .wrapper
      .maincontent
        .container
          header.header.hero__header
            .header__top
              .logo
                a(href="#").logo__link
                  +image("content/logo.png", "logo__img")
              address.address
                ul.address__list
                  li.address__item
                    a(href="#").address__line-link
                      .address__line
                        +icon("location", "address__line-icon")
                        p.address__line-text Россия, Уфа
                      .address__info
                        p.address__info-text ул.Николая Дмитриева, 21/1
                  li.address__item
                    a(href="#").address__line-link
                      .address__line
                        +icon("time", "address__line-icon")
                        p.address__line-text 08:30 - 17:30
                      .address__info
                        p.address__info-text сб.-вс. - выходной
                  li.address__item
                    a(href="tel:+73472588139").address__line-link
                      .address__line
                        +icon("phone", "address__line-icon")
                        p.address__line-text +7 (347) 258-81-39
                      .address__info
                        p.address__info-text заказать звонок
            hr.divider
            .header__bottom
              nav.nav
                ul.nav__list
                  li.nav__item
                    a(href="#").nav__link
                      p.nav__text Конструкции
                  li.nav__item
                    a(href="#").nav__link
                      p.nav__text Работы
                  li.nav__item
                    a(href="#").nav__link
                      p.nav__text Преимущества
                  li.nav__item
                    a(href="#").nav__link
                      p.nav__text Качество
        section.estimate
          .estimate__left
            .estimate__row
              h2.estimate__title С 2004 года проектируем, производим и собираем металлоконструкции в Уфе
              .estimate__text
                p Самостоятельно проектируем на основании схемы заказчика, либо используем свои чертежи
              .estimate__receive
                p.estimate__receive-text Рассчитаем проект в течении 1 дня!
                button.btn Получить смету
          .estimate__right
        section.constructions
          .container
            .section__title
              h2.title Конструкции
            .constructions__wrapper
              ul.constructions__list
                li.constructions__item
                  .constructions__pic
                    +image("content/home.png", ".constructions__pic-img")
                  .constructions__text ЛМК, ЛСТК
                li.constructions__item
                  .constructions__pic
                    +image("content/building.png", ".constructions__pic-img")
                  .constructions__text Здания из металлоконструкций
                li.constructions__item
                  .constructions__pic
                    +image("content/beam.png", ".constructions__pic-img")
                  .constructions__text Сварные балки
                li.constructions__item
                  .constructions__pic
                    +image("content/farms.png", ".constructions__pic-img")
                  .constructions__text Фермы, полигоны, консоли
            .constructions__button-wrapper
              button.btn.button.constructions__btn Посмотреть все констркции
        section.works
          .container
            .section__title
              h2.title Готовые работы
            .works__slider
              .slider
                ul.slider__list
                  li.slider__item
                    +image("content/work-one.jpg", "slider__img")
                  li.slider__item
                    +image("content/work-two.jpg", "slider__img")
                  li.slider__item
                    +image("content/work-three.jpg", "slider__img")
                .slider__buttons
                  button.slider__button.slider__button_prev
                  .slider__number
                    .slider__number-current 01
                    .slider__separator
                    .slider__number-of 15
                  button.slider__button.slider__button_next
        section.order
          .container
            .section__title
              h2.order__title Преимущества заказа у нас
            .order__list-wrapper
              ul.order__list
                li.order__item
                  .order__pic
                    +icon("materials", "order__pic-icon")
                  .order__info
                    h5.order__info-subtitle 100% наличие материалов
                    .order__desc
                      p.order__desc-text Воплотим Вашу идею в любой момент без ожидания поставки
                li.order__item
                  .order__pic
                    +icon("hands", "order__pic-icon order__pic-icon_mod")
                  .order__info
                    h5.order__info-subtitle Без посредников
                    .order__desc
                      p.order__desc-text Вам не нужно переплачивать за исходники
                li.order__item
                  .order__pic
                    +icon("stock", "order__pic-icon")
                  .order__info
                    h5.order__info-subtitle 3 склада в Уфе
                    .order__desc
                      p.order__desc-text Склады находятся в городе в близости от вас, что позволяет экономить на доставке
                li.order__item
                  .order__pic
                    +icon("auto", "order__pic-icon")
                  .order__info
                    h5.order__info-subtitle Свой автопарк
                    .order__desc
                      p.order__desc-text Собственный парк спецтехники и техники для транспортировки
                li.order__item
                  .order__pic
                    +icon("production", "order__pic-icon")
                  .order__info
                    h5.order__info-subtitle Собственное производство
                    .order__desc
                      p.order__desc-text Большие производственные мощности и современное европейское оборудование
                li.order__item
                  .order__pic
                    +icon("manager", "order__pic-icon")
                  .order__info
                    h5.order__info-subtitle Персональный менеджер
                    .order__desc
                      p.order__desc-text Для вашего удобства на каждый заказ выделяется персональный менеджер
                li.order__item
                  .order__pic
                    +icon("manufacturing", "order__pic-icon")
                  .order__info
                    h5.order__info-subtitle Изготовление от 3 дней
                    .order__desc
                      p.order__desc-text Металлоконструкция будет готова в кратчайшие сроки
                li.order__item
                  .order__pic
                    +icon("key", "order__pic-icon")
                  .order__info
                    h5.order__info-subtitle Под ключ
                    .order__desc
                      p.order__desc-text Работа над проектом от идеи до воплощения



